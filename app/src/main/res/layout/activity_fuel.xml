<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fuel">
   <LinearLayout
       android:layout_width="match_parent"
       android:background="@drawable/login_bg"
       android:backgroundTint="@color/purple_700"
       android:layout_height="230dp">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="30dp"
           android:fontFamily="@font/actor"
           android:text="Today's Petrol/Diesel Price in Indian "
           android:textColor="#FBFAF9"
           android:textSize="25dp" />

   </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="#999EB8"
            android:layout_height="200dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:text="Petrol Price"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:text="107.41 ₹/L"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="20dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:text="Diesel Price"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:text="86.67₹/L"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <Button
        android:layout_width="wrap_content"
        android:text="emergency Aplay"
        android:layout_marginTop="30dp"
        android:id="@+id/praci"
        android:elevation="5dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

</LinearLayout>