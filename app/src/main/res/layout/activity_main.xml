<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_gravity="center"
        android:background="@drawable/login_bg"
        android:gravity="center"
        android:backgroundTint="@color/purple_700"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="On Road"
            android:elevation="5dp"
            android:textColor="#FFC400"
            android:textSize="23dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:text="Vehicle Breakdown Assistance"
            android:textColor="#F8F6F6"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/ncar" />
    </LinearLayout>
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/regi"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text=" User Login"
        android:textColor="#000"
        android:textSize="22sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="clear_text"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColorHint="#000"
            app:startIconTint="#000"
            app:startIconDrawable="@drawable/field_email"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:id="@+id/email"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="clear_text"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            app:startIconDrawable="@drawable/field_pass"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            app:helperTextTextColor="#8E1B1B"
            android:textColorHint="#000"
            app:startIconTint="#000"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:id="@+id/password"
                android:inputType="textWebPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/signUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/purple_700"
                android:layout_marginLeft="50dp"
                android:elevation="5dp"
                android:background="@drawable/btn_dsing"
                android:layout_marginRight="50dp"
                android:fontFamily="sans-serif-medium"
                android:text="Login"
                android:textColor="@color/white" />


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_signUp"
                    android:textColor="#4154CC"
                    android:elevation="5dp"
                    android:text="create a new Register"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/forg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#4154CC"
                    android:layout_marginLeft="10dp"
                    android:elevation="5dp"
                    android:text="Forgotten Password"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>